@using DoAnCuoiKy_Nhom1.Models
@model List<SanPham>

@{
    ViewBag.Title = "SearchName";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var uniqueThuongHieus = Model.Select(sp => sp.ThuongHieu).Distinct().ToList();
}
<div style="width: 1500px; height: 470px; background-color: white; margin-top: 4px; position: relative;">

    <div class="row justify-content-center">
        <div style="position: absolute; left: 0; margin-top: 10px; margin-bottom:10px">
            <img style="height: 450px; margin-left:40px" src="~/Images/quangCao7.jpg" />
        </div>
        <div class="left-image">
            <div id="carouselExampleControls" class="carousel w-100 mx-auto mt-3" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/quangCao1.jpg" class="d-block" alt="Ảnh 1" style="width:750px" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/quangCao4.jpg" class="d-block" alt="Ảnh 2" style="width:750px" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/quangCao5.jpg" class="d-block" alt="Ảnh 3" style="width:750px" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div style="margin-left:1rem;margin-top:17px;">
            <div class="top-right-image">
                <img src="~/Images/quangCao2.jpg" alt="Image 2" style="margin-bottom:21px; width:350px">
            </div>
            <div class="bottom-right-image">
                <img src="~/Images/quangCao3.jpg" alt="Image 3" style="width:350px">
            </div>
        </div>
        <div style="position: absolute; right: 0; margin-right: 40px; margin-top: 10px; margin-bottom: 10px">
            <img style="height: 450px;" src="~/Images/quangCao7.jpg" />
        </div>
    </div>
</div>
<div style="width: 82%; background-color: white; margin-top: 15px">
    <div style="width: 1500px; height: 80px; background-color: #FF0000; display: flex; justify-content: center; align-items: center; border-radius: 5px">
        <img src="~/Images/topsp.png" style="width:300px;" />
    </div>
    <div class="row text-center">
        <div style="width: 1500px; margin-left: 15px; margin-bottom: 20px; margin-top: 16px">
            <h2 style="color: red; font-weight: bold; font-size:18px">Tổng số lượng sản phẩm: @ViewBag.SL</h2>
            @foreach (var thuongHieu in uniqueThuongHieus)
            {
                <button class="btn" type="button" onclick="window.location.href='@Url.Action("SearchName", "Home", new { loai = thuongHieu.maThuongHieu })'">
                    @thuongHieu.tenThuongHieu
                </button>
            }
        </div>
    </div>
    <div class="row text-center">
        @foreach (SanPham sp in Model)
        {
            <div class="col-md-3">
                <div class="product-card" style="width:320px;height:550px;border-radius: 2em; box-shadow: 0 1px 2px 0 rgba(60,64,67,.10196078431372549),0 2px 6px 2px rgba(60,64,67,.14901960784313725);margin-left:8px;margin-right:12px;margin-bottom:25px">
                    <a href="~/Home/ChiTietSP/?id=@sp.maSanPham"><img src="~/Images/@sp.hinhAnh" alt="@sp.tenSanPham" style="width:100%;margin-top:40px" /></a>
                    <div class="card-body" style="text-align:left">
                        <p class="card-title" style="font-size:16.5px;color:black;margin-top:30px">@sp.tenSanPham</p>
                        <p class="card-price" style="font-size:16.5px;color:red"><b>Giá bán: @String.Format("{0:0,0}", sp.giaBan)đ</b></p>
                        <p class="card-price" style="font-size: 14.5px; color: black"><b>Nhà sản xuất: </b>@sp.NhaCungCap.tenNhaCungCap</p>
                        <p class="card-price" style="font-size: 14.5px; color: black"><b>Xuất xứ: </b>@sp.xuatXu</p>
                        <p class="card-price" style="font-size:14.5px;color:black"><b>Thời gian bảo hành: </b>@sp.thoiGianBaoHanh</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .original-price {
        text-decoration: line-through;
    }

    .dropdown {
        position: relative;
        display: inline-block;
        margin: 1px 15px;
    }

        .dropdown button {
            background-color: white;
            color: black;
            border: 1px solid lightgray;
            border-radius: 5px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s ease, color 0.3s ease;
            padding: 5px 10px;
        }

    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 100px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        z-index: 20;
    }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .dropdown a {
        color: black;
        text-decoration: none;
        display: block;
        padding: 10px 15px;
        font-size: 18px;
    }

        .dropdown a:hover {
            background-color: lightgray;
        }

    .vertical-line {
        font-size: 20px;
        color: lightgray;
        padding: 0px 12px;
    }

    .left-image {
        display: flex;
        align-items: center;
    }

    .dropdown button:hover {
        background-color: red;
        color: white;
    }

    .row.text-center .btn {
        background-color: white;
        color: black;
        border: 1px solid lightgray;
        border-radius: 5px;
        cursor: pointer;
        font-size: 18px;
        transition: background-color 0.3s ease, color 0.3s ease;
        padding: 5px 10px;
        margin: 5px;
    }

        .row.text-center .btn:hover {
            background-color: #FF0000;
            color: white;
        }
</style>


